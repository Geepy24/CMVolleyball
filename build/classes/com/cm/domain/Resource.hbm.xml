<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.cm.domain">
		<class name="Resource" table="resource">
			<id name="resId" column="res_id">
				<generator class="native"></generator>
			</id>
			<property name="resTag" column="res_tag"></property>
			<property name="resCom" column="res_com"></property>
			<property name="resUri" column="res_uri"></property>
			<property name="userId" column="user_id"></property>
			<property name="userName" column="user_name"></property>
			<property name="adsName" column="ads_name"></property>
			<property name="pubTime" column="pub_time"></property>
			<property name="resName" column="res_name"></property>
			<!-- name是在Resource中引用MediaPrew的对象的名字 -->
			<!-- class是外键所在实体类的名字 -->
			<!-- column是外键名 -->
			<!-- unique表示唯一限制，将多对一变成了一对一 -->
			<many-to-one name="mediaPreview" class="MediaPreview" column="mpId" unique="true" cascade="save-update,delete"  lazy="false" fetch="join"></many-to-one>
		</class>
</hibernate-mapping>